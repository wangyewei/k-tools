{
  "name": "k-tools",
  "version": "0.0.1-dev",
  "description": "A library of TypeScript tools that you'll probably use a lot",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "workspaces": [
    "./packages"
  ],
  "files": [
    "dist"
  ],
  "types": "dist/type/packages/index.d.ts",
  "scripts": {
    "build": "pnpm run build:esm",
    "clean": "rimraf ./dist",
    "build:esm": "pnpm run clean && cross-env BABEL_ENV=esm rollup -c",
    "test": "cross-env TS_NODE_PROJECT='test/tsconfig.test.json' mocha packages/**/*.test.ts"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wangyewei/k-tools.git"
  },
  "keywords": [
    "TypeScript",
    "JavaScript",
    "tools",
    "library"
  ],
  "author": "Yewei Wang <wangyewei1@foxmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wangyewei/k-tools/issues"
  },
  "homepage": "https://github.com/wangyewei/k-tools#readme",
  "dependencies": {
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^23.0.0",
    "@rollup/plugin-json": "^5.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "fs": "^0.0.1-security",
    "mocha": "^10.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.0.0",
    "rollup-plugin-dts": "^4.2.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0"
  }
}